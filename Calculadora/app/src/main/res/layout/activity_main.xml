<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3A3737">

    <Button
        android:id="@+id/botonIgual"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="="
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/botonComa"
        app:layout_constraintTop_toBottomOf="@+id/botonMas" />

    <Button
        android:id="@+id/boton0"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FFEB3B"
        android:text="0"
        android:textSize="20dp"
        android:textColor="#0F0403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton1" />

    <TextView
        android:id="@+id/salirNum"
        android:layout_width="310dp"
        android:layout_height="135dp"
        android:layout_marginTop="92dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonAc"
        android:layout_width="95dp"
        android:layout_height="58dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="AC"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:iconTint="#FFEB3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salirNum" />

    <Button
        android:id="@+id/botonDiv"
        android:layout_width="95dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:text="/"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salirNum" />

    <Button
        android:id="@+id/boton7"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="7"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonAc" />

    <Button
        android:id="@+id/boton8"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="#FFEB3B"
        android:text="8"
        android:textSize="20dp"
        android:textColor="#0F0403"
        app:layout_constraintStart_toEndOf="@+id/boton7"
        app:layout_constraintTop_toBottomOf="@+id/salirNum" />

    <Button
        android:id="@+id/boton9"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="152dp"
        android:text="9"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toEndOf="@+id/boton8"
        app:layout_constraintTop_toBottomOf="@+id/salirNum" />

    <Button
        android:id="@+id/botonMulti"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="X"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/boton9"
        app:layout_constraintTop_toBottomOf="@+id/botonDiv" />

    <Button
        android:id="@+id/boton4"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="4"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton7" />

    <Button
        android:id="@+id/boton1"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="1"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton4" />

    <Button
        android:id="@+id/boton2"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="2"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toEndOf="@+id/boton1"
        app:layout_constraintTop_toBottomOf="@+id/boton5" />

    <Button
        android:id="@+id/boton5"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="5"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toEndOf="@+id/boton4"
        app:layout_constraintTop_toBottomOf="@+id/boton8" />

    <Button
        android:id="@+id/boton6"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="6"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toEndOf="@+id/boton5"
        app:layout_constraintTop_toBottomOf="@+id/boton9" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="3"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#0F0403"
        app:layout_constraintStart_toEndOf="@+id/boton2"
        app:layout_constraintTop_toBottomOf="@+id/boton6" />

    <Button
        android:id="@+id/botonComa"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text=","
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/boton0"
        app:layout_constraintTop_toBottomOf="@+id/boton3" />

    <Button
        android:id="@+id/botonMenos"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="-"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/boton6"
        app:layout_constraintTop_toBottomOf="@+id/botonMulti" />

    <Button
        android:id="@+id/botonMas"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="+"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/boton3"
        app:layout_constraintTop_toBottomOf="@+id/botonMenos" />
</androidx.constraintlayout.widget.ConstraintLayout>